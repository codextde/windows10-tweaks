{
  "productName": "Windows 10 - Tweaks",
  "appId": "de.codext.windows10-tweaks",
  "directories": {
    "output": "release/"
  },
  "publish": [
    {
      "provider": "generic",
      "url": "https://ftp.codext.de/windows10-tweaks/released/"
    }
  ],
  "files": [
    "**/*",
    "!build/",
    "!stuff/",
    "!**/*.ts",
    "!*.code-workspace",
    "!LICENSE.md",
    "!package.json",
    "!package-lock.json",
    "!src/",
    "!e2e/",
    "!hooks/",
    "!angular.json",
    "!_config.yml",
    "!**/*.yml",
    "!karma.conf.js",
    "!tsconfig.json",
    "!tslint.json"
  ],
  "win": {
    "icon": "dist",
    "target": ["nsis"]
  },
  "nsis": {
    "allowElevation": true,
    "deleteAppDataOnUninstall": true,
    "oneClick": true,
    "perMachine": true,
    "allowToChangeInstallationDirectory": false,
    "runAfterFinish": true,
    "createStartMenuShortcut": true,
    "createDesktopShortcut": true
  },
  "mac": {
    "icon": "dist",
    "target": ["dmg"]
  },
  "linux": {
    "icon": "dist",
    "target": ["AppImage"]
  }
}
